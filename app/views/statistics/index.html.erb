<div class="content_block">
  <ul>
    <li>
      <% @statistics.each do |s| %>
        <h2><%=s.title%></h2>
        <p>
          <%=s.description%>
        </p>
        <p>
          <%=s.units%>
        </p>
        <%= link_to 'Destroy', s, :confirm => 'Are you sure?', :method => :delete %>
      <% end %>
    </li>
  </ul>
</div>
<%= link_to 'New statistic', new_statistic_path %>
